{
  "name": "graffiti",
  "version": "0.2.0",
  "description": "Cross-platform GUI toolkit for node.js",
  "type": "module",
  "main": "./lib/index.js",
  "author": "Kamil Tomšík <info@tomsik.cz>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cztomsik/graffiti.git"
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "ws": "^7.4.5"
  },
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "check": "tsc --noEmit",
    "test": "zig build test --build-file ./libgraffiti/build.zig",
    "build": "zig build --build-file ./libgraffiti/build.zig",
    "postinstall": "npm run build",
    "prepare": "esbuild --bundle --format=esm --platform=node --target=esnext --external:node-fetch --external:ws --outdir=./lib ./src/index.ts ./src/worker.ts"
  },
  "devDependencies": {
    "@types/node": "^16.11.38",
    "esbuild": "^0.14.42",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "printWidth": 120,
    "arrowParens": "avoid"
  }
}
